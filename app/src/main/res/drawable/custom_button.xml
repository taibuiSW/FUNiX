<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#CDDC39"
                android:endColor="#CDDC39"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#2196F3"
                android:startColor="#2196F3"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#F44336"
                android:startColor="#F44336"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>